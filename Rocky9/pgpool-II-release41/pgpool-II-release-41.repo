[pgpool41]
name=pgpool-II 4.1 $releasever - $basearch
baseurl=https://www.pgpool.net/yum/rpms/4.1/redhat/rhel-$releasever-$basearch
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-PGPOOL2

[pgpool41-source]
name=pgpool-II 4.1 $releasever - $basearch - Source
failovermethod=priority
baseurl=https://www.pgpool.net/yum/srpms/4.1/redhat/rhel-$releasever-$basearch
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-PGPOOL2
